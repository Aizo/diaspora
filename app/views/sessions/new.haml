= content_for :page_title do
  = t('devise.sessions.new.sign_in')
  | DIASPORA* ALPHA

= content_for :head do
  = include_javascripts :login

  :css
    header, #flash_alert { display:none; }

.container
  #login.span6.content-area
    .clearfix
      = image_tag('asterisk.png', :id => 'asterisk', :class => 'logo', :height => 154, :width => 154)
    .clearfix
      = image_tag('logo_caps.png', :id => 'logo', :width => 98, :height => 14)

    - flash.each do |name, msg|
      .clearfix
        %span.label.important
          = msg

    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      %fieldset
        .clearfix
          = f.text_field :username, :tabindex => 1, :value => prefilled_username, :placeholder => t('username')

        .clearfix
          = f.password_field :password, :tabindex => 2, :placeholder => t('password')
        - if devise_mapping.rememberable?
          .clearfix
            %ul.inputs-list
              %li
                %label
                  = f.check_box :remember_me, :tabindex => 3
                %span
                  = t('devise.sessions.new.remember_me')

        .actions
          = f.submit t('devise.sessions.new.sign_in'), :tabindex => 4, :class => 'btn primary'

        - if display_password_reset_link?
          %span.help-block
            = link_to t('devise.shared.links.forgot_your_password'), new_password_path(resource_name), :tabindex => 5
            - if display_registration_link?
              \|
              = link_to t('devise.shared.links.sign_up'), new_registration_path(resource_name)

