.modal-header
  = link_to "x", "#", :class => "close"
  %h3
    = t('.title')

.modal-body
  %p
    = t('.outside')
  %ul
    %li
      = link_to "RSS", "#{current_user.public_url}.atom"
    - if current_user.services
      - for service in current_user.services
        %li
          = t('.logged_in', :service => service.provider)

.modal-footer
  = link_to t('.manage'), services_path, :class => 'btn primary'
